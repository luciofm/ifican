<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.TouchFeedbackCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layout_margin="30dp"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">

        <com.luciofm.ifican.app.widget.FloatLabelLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:floatLabelTextAppearance="@style/TextAppearance.AppTheme.FloatLabel">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textColorHint="@color/soft_pink"
                android:hint="Username"
                android:textSize="50sp"/>
        </com.luciofm.ifican.app.widget.FloatLabelLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:visibility="gone"
            tools:visibility="visible"
            android:fontFamily="monospace"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:background="@color/soft_black"
            android:layout_margin="8dp"
            android:padding="24dp"/>
    </LinearLayout>

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="ViewPropertyAnimator"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="90sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

</LinearLayout>
